CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nama VARCHAR(100),
    email VARCHAR(100),
    password VARCHAR(255),
    role ENUM('admin','teknisi','kasir','pelanggan') DEFAULT 'pelanggan'
);

CREATE TABLE akun_pelanggan (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nama VARCHAR(100),
    email VARCHAR(100),
    password VARCHAR(255)
);

CREATE TABLE pelanggan (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nama VARCHAR(100),
    kontak VARCHAR(50),
    alamat TEXT
);

CREATE TABLE servis (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nama VARCHAR(100),
    perangkat VARCHAR(50),
    kerusakan TEXT,
    status VARCHAR(20),
    tanggal TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

CREATE TABLE sparepart (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nama VARCHAR(100),
    stok INT,
    harga INT
);

CREATE TABLE transaksi (
    id INT AUTO_INCREMENT PRIMARY KEY,
    tanggal DATE,
    jenis ENUM('Pemasukan','Pengeluaran'),
    keterangan TEXT,
    jumlah INT
);